<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.sudar.appportfolio.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nano_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/nano_apps"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/spotify_button"
            style="@style/ButtonStyle"
            android:text="@string/spotify_text"/>

        <Button
            android:id="@+id/score_app_button"
            style="@style/ButtonStyle"
            android:text="@string/scores_app_text"/>

        <Button
            android:id="@+id/library_app_button"
            style="@style/ButtonStyle"
            android:text="@string/library_app_text"/>

        <Button
            android:id="@+id/build_bigger_button"
            style="@style/ButtonStyle"
            android:text="@string/build_bigger_text"/>

        <Button
            android:id="@+id/xyz_button"
            style="@style/ButtonStyle"
            android:text="@string/xyz_reader_text"/>

        <Button
            android:id="@+id/capstone_button"
            style="@style/ButtonStyle"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/capstone_text"/>
    </LinearLayout>
</ScrollView>