<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.sudar.multithreadingdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="me.sudar.multithreadingdemo.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.sudar.multithreadingdemo.HandlerDemoActivity"
            android:label="@string/title_activity_handler_demo"
            android:parentActivityName="me.sudar.multithreadingdemo.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.sudar.multithreadingdemo.MainActivity" />
        </activity>
        <activity
            android:name="me.sudar.multithreadingdemo.AsyncTaskDemoActivity"
            android:label="@string/title_activity_async_task_demo"
            android:parentActivityName="me.sudar.multithreadingdemo.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.sudar.multithreadingdemo.MainActivity" />
        </activity>
    </application>

</manifest>